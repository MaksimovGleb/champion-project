# Base app
APP_NAME=Champion
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8080

# Timezone (optional)
APP_TIMEZONE=UTC

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info

# HTTP / WS ports exposed by compose
APP_HTTP_PORT=8080
WS_PORT=6001

# Database (used by mysql service via ${...})
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=champion
DB_USERNAME=champion
DB_PASSWORD=secret
FORWARD_DB_PORT=3306

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
FORWARD_REDIS_PORT=6379

# Laravel drivers
BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
FILESYSTEM_DISK=public

# Mail (placeholder — set real creds if needed)
MAIL_MAILER=smtp
MAIL_HOST=smtp
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Cache prefix to avoid collisions
CACHE_PREFIX=champion

# Queue/Horizon (if Horizon used)
HORIZON_PREFIX=champion-hz

# Scout (search) — default to database to avoid external deps
SCOUT_DRIVER=database

# JWT (if required by your app; run: php artisan jwt:secret to generate)
JWT_SECRET=